<div class='banner-video'>
  {% if video %}
  <div class = "video-overlay"></div>
   <video autoplay loop>
      <source src="{{ video }}.mp4" type="video/mp4 ">
      <source src="{{ video }}.ogg" type="video/ogg">
      Your browser does not support the video tag.
    </video>   
  {% endif %}
  <div class = "content">
    <div class="text-wrapper">
      <div class="text-main">
        {{ text }}
      </div>
      <a href = "/contact-us" class="button-standard">
        {{ subtext }}
     </a>
    </div>
    <div class="jump-nav" data-id = "learn-more">
     Learn More
    </div>
  </div>
</div>
