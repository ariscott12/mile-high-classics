<div class="banner-page">
  	<div class = "text-wrapper">
  		<div class = "content">
  			<h1>{{ title }}</h1>
   			<p class = "tagline">{{ banner_text }}</p>
        <div class = "clear"></div>
   			<div class = "scroll-down-arrow" data-id = "scroll-down">
          <div class = "arrow-hover"></div>
          <img src = "{{ scroll_icon }}" />
        </div>
   		</div>
	</div> 

  {% if banner_video %}
    <video autoplay loop>
      <source src="{{ banner_video }}.mp4" type="video/mp4 ">
      <source src="{{ banner_video }}.ogg" type="video/ogg">
      Your browser does not support the video tag.
    </video>
    <div class = "overlay overlay-video"></div> 
  {% elseif banner_image %}
    {{banner_image}}
    <div class = "overlay overlay-image"></div>
  {% endif %}

</div>

	